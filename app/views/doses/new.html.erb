<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Add an ingredient</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.submit "Add a dose", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
