<div class="container">
  <div class="row my-4">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-lg-4 d-flex justify-content-between p-4">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>" alt=<% cocktail.name %>>
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)  %></h5>
          <p class="card-text"></p>
          <%= link_to '<i class="fa fa-trash"></i> Remove cocktail'.html_safe, cocktail_path(cocktail), method: :delete, class: "btn btn-danger"  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
